<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_browser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/addressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/urlField"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textUri" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/goButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/go_button_label" />

    </LinearLayout>

	<android.support.v4.view.ViewPager
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools" android:id="@+id/pager"
		android:layout_width="match_parent" android:layout_height="match_parent"
		tools:context=".MainActivity">

		<!-- This title strip will display the currently visible page title, as 
			well as the page titles for adjacent pages. -->

		<android.support.v4.view.PagerTitleStrip
			android:id="@+id/pager_title_strip" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_gravity="top"
			android:background="#33b5e5" android:paddingBottom="4dp"
			android:paddingTop="4dp" android:textColor="#fff" />

	</android.support.v4.view.ViewPager>

</LinearLayout>
